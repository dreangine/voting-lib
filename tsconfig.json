{
  "compilerOptions": {
    "target": "es6",
    "module": "commonjs",
    "moduleResolution": "node",
    "sourceMap": true,
    "declaration": true,
    "removeComments": false,
    "noImplicitAny": false,
    "strictNullChecks": true,
    "outDir": "./dist",
    "rootDir": "./src",
    "lib": ["es6", "dom"],
    "baseUrl": "./src",
    "paths": {
      "*": ["./node_modules/*"]
    }
  }
}
