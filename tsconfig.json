{
  "compilerOptions": {
    "target": "es2020",
    "module": "commonjs",
    "moduleResolution": "node",
    "sourceMap": true,
    "declaration": true,
    "removeComments": false,
    "noImplicitAny": false,
    "strictNullChecks": true,
    "outDir": "./dist",
    "rootDir": "./src",
    "lib": ["es2020", "dom"],
    "baseUrl": "./src",
    "paths": {
      "*": ["./node_modules/*"]
    }
  },
  "exclude": ["src/**/*.test.ts", "dist/**/*"]
}
